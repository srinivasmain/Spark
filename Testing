from pyspark.sql import SparkSession

# Create a Spark session
spark = SparkSession.builder.appName("ReadJSON").getOrCreate()

# Define the path to your multi-line JSON file
json_file_path = "path/to/your/multi_line_file.json"

# Read the multi-line JSON file into a DataFrame
json_df = spark.read.option("multiline", "true").json(json_file_path)

# Show the DataFrame
json_df.show(truncate=False)

# Stop the Spark session (optional, depending on your workflow)
spark.stop()
